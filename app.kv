<FileChooserImageLayout>:
    on_entry_added: stacklayout.add_widget(args[1])
    on_entries_cleared: stacklayout.clear_widgets()
    ScrollView:
        id: scrollview
        pos: root.pos
        size: root.size
        size_hint: None, None
        do_scroll_x: False
        Scatter:
            do_rotation: False
            do_scale: False
            do_translation: False
            size_hint_y: None
            height: stacklayout.height
            StackLayout:
                id: stacklayout
                width: scrollview.width
                size_hint_y: None
                height: self.minimum_height
                spacing: '10dp'
                padding: '10dp'

<FileChooserImageView>:
    layout: layout
    FileChooserImageLayout:
        id: layout
        controller: root

[FileImageEntry@ImagePreviewEntry]:
    locked: False
    path: ctx.path
    selected: self.path in ctx.controller().selection
    size_hint: None, None

    on_touch_down: self.collide_point(*args[1].pos) and ctx.controller().entry_touched(self, args[1])
    on_touch_up: self.collide_point(*args[1].pos) and ctx.controller().entry_released(self, args[1])
    size: '100dp', '100dp'

    canvas:
        Color:
            rgba: 1, 1, 1, 1 if self.selected else 0
        BorderImage:
            border: 8, 8, 8, 8
            pos: root.pos
            size: root.size
            source: 'atlas://data/images/defaulttheme/filechooser_selected'

    Image:
        size: '48dp', '80dp'
        source: root.get_image(ctx)
        pos: root.x + dp(24), root.y + dp(40)
    Label:
        text: ctx.name
        text_size: (root.width, self.height)
        halign: 'center'
        shorten: True
        size: '100dp', '16dp'
        pos: root.x, root.y + dp(16)

    Label:
        text: '{}'.format(ctx.get_nice_size())
        font_size: '11sp'
        color: .8, .8, .8, 1
        size: '100dp', '16sp'
        pos: root.pos
        halign: 'center'

<ExitScreen>:
    BoxLayout:
        Button:
            text: 'Just kidding, go to Main Menu'
            on_press: root.manager.current = 'menu'
        Button:
            text: 'Quit without Saving'
            on_press: app.stop()
        Button:
            text: 'Save & Quit'
            on_press: app.save_and_quit()
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            size_hint_y: .2
            text: 'Welcome!'
        BoxLayout:
            valign: 'bottom'
            Button:
                text: 'Pictures'
                on_press: root.manager.current = 'pics'
            Button:
                text: 'Draw'
                on_press: root.manager.current = 'canvas'
            Button:
                text: 'Exit'
                on_press: root.manager.current = 'quitter'
<PicturesScreen>:
    BoxLayout:
        Label:
            size_hint_x: .1
            text_size: self.size
            valign: 'top'
            text: 'Pick a file to run a model on'
        BoxLayout:
            orientation: "vertical"
            FileChooserImageView:
                id: filechooser
                path: "/home/pi/Desktop/DemoDisplay/streetview"
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: "Cancel"
                    on_release: root.manager.current = 'menu'

                Button:
                    text: "Load"
                    on_release: root.process(filechooser.path, filechooser.selection)
<ProcessingScreen>:
    valid: False
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'What is this?'
                size_hint_y: .1
            Image:
                id: testcase
                allow_stretch: True
                size: 160,160
                source: 'atlas://data/images/defaulttheme/filechooser_file'
            Button:
                text: 'Menu'
                size_hint_y: .4
                on_press: root.reset()
        BoxLayout:
            Label:
                id: message 
                text: "No image loaded" 
<DrawingScreen>:
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .2
            Button:
                text: 'Menu'
                on_press: root.manager.current = 'menu'
            Button:
                text: 'Clear'
                on_press: app.clear()
            Button:
                text: 'Process'
                on_press: root.process()
        AnchorLayout:
            padding: 200,10,10,100
            MNISTCanvas:           
                id: mnist
                size: 280, 280
                valign: 'center'
                halign: 'right'


